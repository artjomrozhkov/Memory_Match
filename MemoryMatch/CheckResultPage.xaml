<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MemoryMatch.CheckResultPage">
    <ContentPage.Content>
        <Picker x:Name="sortPicker" SelectedIndexChanged="SortPicker_SelectedIndexChanged">
            <Picker.Title>Sort By</Picker.Title>
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Player Name</x:String>
                    <x:String>Score</x:String>
                    <x:String>Wrong Attempts</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
    </ContentPage.Content>
</ContentPage>